# Install a Jupyter kernel. Requires ipykernel in the env
jupyter-install-ipykernel:
    #!/usr/bin/env bash
    set_init
    cd {{ invocation_directory() }}
    basename=${PWD##*/}
    python -m ipykernel install --user --name="$basename" --env PATH "$PATH"


